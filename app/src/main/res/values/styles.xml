<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TannerCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customBlue</item>
        <item name="colorPrimaryDark">@color/customBlueDark</item>
        <item name="colorAccent">@color/customRed</item>
    </style>

    <style name="CalebCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/calebPurple</item>
        <item name="colorPrimaryDark">@color/calebGrey</item>
        <item name="colorAccent">@color/calebGrey</item>
    </style>

    <style name="CarsonCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customPink</item>
        <item name="colorPrimaryDark">@color/customBrown</item>
        <item name="colorAccent">@color/customCream</item>
    </style>

    <style name="tpkCustomTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tpkPurple</item>
        <item name="colorPrimaryDark">@color/tpkPurple</item>
        <item name="colorAccent">@color/tpkPurple</item>
    </style>

    <style name="RaitzCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/raitzOrange</item>
        <item name="colorPrimaryDark">@color/raitzBurntOrange</item>
        <item name="colorAccent">@color/raitzGray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>