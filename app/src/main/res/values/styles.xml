<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TannerCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customBlue</item>
        <item name="colorPrimaryDark">@color/customBlueDark</item>
        <item name="colorAccent">@color/customRed</item>
    </style>

    <style name="GibbsCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gibbsPrimary</item>
        <item name="colorPrimaryDark">@color/gibbsSecondary</item>
        <item name="colorAccent">@color/gibbsTertiary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/newPurple</item>
        <item name="colorPrimaryDark">@color/newOrange</item>
        <item name="colorAccent">@color/newCol</item>
    </style>



    <style name="ZteTheme">
        <item name="colorPrimaryDark">@color/zteblack</item>
        <item name="colorAccent">@color/ztelightblue</item>
        <item name="colorSecondary">@color/zteblue</item>
    </style>


</resources>