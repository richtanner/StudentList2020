<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs315.studentlist2020">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".cookies"
            android:label="@string/title_anthony_details"
            android:parentActivityName=".AnthonyCuthbertActivity"
            android:theme="@style/AnthonyCustomTheme" />
        <activity
            android:name=".AnthonyCuthbertActivity"
            android:label="@string/title_anthony_details"
            android:parentActivityName=".ItemListActivity"
            android:theme="@style/AnthonyCustomTheme" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ItemListActivity" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ItemListActivity" />
        <activity
            android:name=".ProfTannerActivity"
            android:label="@string/title_tanner_detail"
            android:theme="@style/TannerCustomTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
    </application>

</manifest>